public class ClaseRectangulo {

    private int altura;
    private int base;

    public ClaseRectangulo(int altura, int base) {

        this.altura = altura;
        this.base = base;
    }
    // metodo para el constructor getters

    public int getAltura() {
        return altura;
    }

    public int getBase() {
        return base;
    }
    // metodo para el contructor setters

    public void setAltura(int altura) {
        this.altura = altura;
    }

    public void setBase(int base) {
        this.base = base;

        // codigo para calcular el area de un rectangulo

    public int calcularArea() {
        return base * altura;
    }

    public int calcularPerimetro() {
        return 2 * (base + altura);
    }

}
