import java.util.Scanner;

public class Calculadora {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        // Aqui le pedimos los números al usuario
        System.out.print("Ingresa el primer número: ");
        int num1 = input.nextInt();

        System.out.print("Ingresa el segundo número: ");
        int num2 = input.nextInt();

        // Aqui le pedimos la operación que desea (sea suma, resta, multiplicacion y division)
        System.out.print("Ingresa la operación (+, -, *, /): ");
        char operacion = input.next().charAt(0);

        int resultado = 0;  // Variable para guardar el resultado
        boolean operacionValida = true;

        // Aqui utilizamos la estructura con los condicionales (if y else if)
        if (operacion == '+') {
            resultado = num1 + num2;
        } else if (operacion == '-') {
            resultado = num1 - num2;
        } else if (operacion == '*') {
            resultado = num1 * num2;
        } else if (operacion == '/') {
            if (num2 != 0) {
                resultado = num1 / num2;
            } else {
                System.out.println("Error: no se puede dividir entre cero.");
                operacionValida = false;
            }
        } else {
            System.out.println("Operación no válida.");
            operacionValida = false;
        }

        // Mostrar resultado si es válida
        if (operacionValida) {
            System.out.println("El resultado es: " + resultado);
        }

        input.close();
    }
}
